	<body>
		<h2>The current time and date:</h2>
		<div class="container">
			@{ DateTime CurrentTime = DateTime.Now;
			<h1>@CurrentTime.ToString("MMM d, yyy")</h1>
			<h1>@CurrentTime.ToString("h:mm tt")</h1>
			}
		</div>
	</body>
</html>
